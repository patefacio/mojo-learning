{
  "name": "Mojo Learning Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },
  "postCreateCommand": "bash -c 'pip install jupyter notebook ipython && magic install mojo || echo Magic installation will be handled separately'",
  "forwardPorts": [8888],
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-toolsai.jupyter"]
    }
  },
  "containerEnv": {
    "MAGIC_DIR": "/root/.modular",
    "PATH": "/root/.modular/bin:${PATH}",
    "SHELL": "/bin/bash"
  },
  "remoteUser": "root",
  "init": true
}
